@model SoftGym.Web.ViewModels.EatingPlans.EatingPlanDetailsViewModel

@using SoftGym.Data.Models.Enums
<h2>Eating Plan</h2>
<hr />
<div class="container-fluid">
    <h4 class="mb-5">Breakfast Options(@Model.Meals.First(x => x.Meal.Type == MealType.Breakfast).TotalCalories.ToString("f0") calories per portion)</h4>
    <div class="row">
        @foreach (var meal in Model.MealEnitities.Where(x => x.Type == MealType.Breakfast))
        {
            <div class="card col-md-4">
                <div class="card-body h-100">
                    <div class="card-img-top height-15rem">
                        <img class="img-fluid mx-auto h-100 d-block" src="@meal.PictureUrl" alt="Card image cap">
                    </div>
                    <h5 class="card-title">@meal.Name - @Model.Meals.First(x => x.MealId == meal.Id).MealWeight.ToString("f0")g.</h5>
                </div>
            </div>
        }
    </div>
    <h4 class="mb-5">Lunch Options(@Model.Meals.First(x => x.Meal.Type == MealType.Breakfast).TotalCalories.ToString("f0") calories per portion)</h4>
    <div class="row">
        @foreach (var meal in Model.MealEnitities.Where(x => x.Type == MealType.Lunch))
        {
            <div class="card col-md-4 col-lg-4 col-xs-4">
                <div class="card-body h-100">
                    <div class="card-img-top height-15rem">
                        <img class="img-fluid mx-auto h-100 d-block" src="@meal.PictureUrl" alt="Card image cap">
                    </div>
                    <h5 class="card-title">@meal.Name - @Model.Meals.First(x => x.MealId == meal.Id).MealWeight.ToString("f0")g.</h5>
                </div>
            </div>
        }
    </div>
    <h4 class="mb-5">Dinner Options(@Model.Meals.First(x => x.Meal.Type == MealType.Breakfast).TotalCalories.ToString("f0") calories per portion)</h4>
    <div class="row">
        @foreach (var meal in Model.MealEnitities.Where(x => x.Type == MealType.Dinner))
        {
            <div class="card col-md-4 col-lg-4 col-xs-4">
                <div class="card-body h-100">
                    <div class="card-img-top height-15rem">
                        <img class="img-fluid mx-auto h-100 d-block" src="@meal.PictureUrl" alt="Card image cap">
                    </div>
                    <h5 class="card-title">@meal.Name - @Model.Meals.First(x => x.MealId == meal.Id).MealWeight.ToString("f0")g.</h5>
                </div>
            </div>
        }
    </div>
    <h4 class="mb-5">Snack Options(@Model.Meals.First(x => x.Meal.Type == MealType.Snack).TotalCalories.ToString("f0") calories per portion, 2 per day)</h4>

    <div class="row">
        @foreach (var meal in Model.MealEnitities.Where(x => x.Type == MealType.Snack))
        {
            <div class="card col-md-4 col-lg-4 col-xs-4">
                <div class="card-body h-100">
                    <div class="card-img-top height-15rem">
                        <img class="img-fluid mx-auto h-100 d-block" src="@meal.PictureUrl" alt="Card image cap">
                    </div>
                    <h5 class="card-title">@meal.Name - @Model.Meals.First(x => x.MealId == meal.Id).MealWeight.ToString("f0")g.</h5>
                </div>
            </div>
        }
    </div>
</div>
