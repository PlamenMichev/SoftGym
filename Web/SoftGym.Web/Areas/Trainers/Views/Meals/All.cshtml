@model SoftGym.Web.ViewModels.Trainers.Meals.AllMealsViewModel

@{
    ViewData["Title"] = "All";
}

@using SoftGym.Data.Models.Enums
@{
    ViewData["Title"] = "Trainer dashboard";
}

<h1 class="text-center">@this.ViewData["Title"]</h1>
<hr />
<div class="row">
    <div class="col-md-3">
        <partial name="../../../Administration/Views/Dashboard/_SideNavPartial" />
    </div>
    <div class="col-md-9 border">
        <h3 class="text-center">All Meals</h3>
        <hr />
        <div class="text-center">
            <a href="/Trainers/Meals/Add" class="btn btn-primary waves-effect mb-3 custom-blue" title="Add Meal">
                <i class="fas fa-plus-circle"></i>
            </a>
        </div>
        <div class="row">
            @foreach (var meal in Model.Meals)
            {
                <div class="card col-md-4 col-lg-4 col-xs-4">
                    <div class="card-body h-100">
                        <div class="card-img-top height-15rem">
                            <img class="img-fluid mx-auto d-block" src="@meal.PictureUrl" alt="Card image cap">
                        </div>
                        <h5 class="card-title">@meal.Name</h5>
                        <a href="/Trainers/Meals/Details/@meal.Id" class="btn btn-success">Details</a>
                        <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#b@(meal.Id)b">
                            <i class="fas fa-trash-alt"></i>
                        </button>
                        <partial name="_WarningDeletePartial" model="@meal" />
                        <a href="/Trainers/Meals/Edit/@meal.Id" class="btn btn-primary custom-blue" title="Edit"><i class="fas fa-edit"></i></a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>