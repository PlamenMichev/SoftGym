@model SoftGym.Web.ViewModels.Administration.Facilities.FacilityListItemViewModel

<!-- Modal -->
<div class="modal fade" id="b@(Model.Id)b" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <span>Are you sure that you want to delete "@Model.Name" facility forever?
                After deleting it here you will not be able to restore it again!</span>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <a href="/Administration/Facilities/HardDelete?facilityId=@Model.Id" class="btn btn-danger" title="Hard Delete"><i class="fas fa-trash-alt"></i></a>
            </div>
        </div>
    </div>
</div>