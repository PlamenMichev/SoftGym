@model SoftGym.Web.ViewModels.Administration.Facilities.FacilitiListItemViewModel

@using SoftGym.Common
<!-- Modal -->
@if ((Model.IsDeleted == true && (this.User.IsInRole(GlobalConstants.AdministratorRoleName) ||
 this.User.IsInRole(GlobalConstants.AdministratorRoleName))) || Model.IsDeleted == false)
{
    <div class="modal fade" id="a@(Model.Id)a" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
         aria-hidden="true">
        <div class="modal-lg modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6 col-lg-6">
                            <img src="@Model.PictureUrl" alt="Facility Picture" class="w-100 img-fluid" />
                        </div>
                        <div class="col-md-6 col-lg-6">
                            <h4 class="text-center">@Model.Name</h4>
                            <h6 class="text-center">Type: @Model.Name</h6>
                            <span class="text-center">@Model.Description</span>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>
}
